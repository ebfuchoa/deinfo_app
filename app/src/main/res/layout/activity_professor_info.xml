<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfessorInfo">

    <ImageView
            android:layout_width="164dp"
            android:layout_height="158dp"
            app:srcCompat="@mipmap/gilberto"
            android:id="@+id/ivProfessorImagem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Gilberto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvNome"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivProfessorImagem"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.463"/>

    <me.biubiubiu.justifytext.library.JustifyTextView
            android:text="Descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvDescricao"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/ivProfessorImagem"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.463"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="tvCVLattes:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvLattes"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDescricao"
            android:textSize="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.463"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>